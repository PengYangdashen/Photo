<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.example.photo.ProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pb"
            app:progressTextSize="20sp"
            app:progressTextColor="@color/colorAccent"
            app:innerBackground="@color/colorPrimary"
            app:outerBackground="@color/colorAccent"
            app:roundWidth="10dp"
    />
    <Button android:layout_width="80dp" android:layout_height="50dp"
            android:text="15"
            android:id="@+id/btn_15"/>
    <Button android:layout_width="80dp" android:layout_height="50dp"
            android:text="30"
            android:id="@+id/btn_30"/>
    <Button android:layout_width="80dp" android:layout_height="50dp"
            android:text="60"
            android:id="@+id/btn_60"/>
    <Button android:layout_width="80dp" android:layout_height="50dp"
            android:text="98"
            android:id="@+id/btn_98"/>
</LinearLayout>